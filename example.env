# 数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grag_db
POSTGRES_USER=grag_user
POSTGRES_PASSWORD=your_password_here

# DeepSeek API 配置
DEEPSEEK_API_KEY=your_api_key_here

# 本地模型配置（可选）
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=qwen2.5:7b

# API 认证配置
API_USERNAME=admin
API_PASSWORD=your_api_password_here

# LightRAG 配置
LLM_MODEL=api  # api 或 local

# 嵌入模型配置
# 提供商选项: siliconflow, ollama, openai
EMBEDDING_PROVIDER=siliconflow
# SiliconFlow 支持的模型: BAAI/bge-m3, Pro/BAAI/bge-m3, BAAI/bge-large-zh-v1.5, Qwen/Qwen3-Embedding-8B 等
# OpenAI 支持的模型: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
# 注意: Ollama 支持的模型已弃用
EMBEDDING_MODEL=BAAI/bge-m3
# 嵌入向量维度（必须与模型匹配：BAAI/bge-m3 = 1024）
EMBEDDING_DIM=1024
# SiliconFlow API Key (从 https://siliconflow.cn 获取)
EMBEDDING_API_KEY=your_siliconflow_api_key_here
# SiliconFlow API 地址 (默认: https://api.siliconflow.cn/v1)
EMBEDDING_BASE_URL=https://api.siliconflow.cn/v1

#github 令牌配置
GITHUB_TOKEN = your_github_token
